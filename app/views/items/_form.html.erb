<%= form_for item, :url => user_items_path(params[:id]) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter the name of the item to add" %>
    <%= f.hidden_field :user_id, value: params[:id] %>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
